<UserControl x:Class="ExamplePlugin.ExamplePluginGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamplePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="Auto" 
             d:DesignWidth="Auto">
    <Grid x:Name="Root"  DataContext="{x:Static local:ExamplePluginSettings.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>
        
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Settings" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Health Potion Trigger Hp: " Margin="3,5,3,1"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="3" Text="{Binding Health, Mode=TwoWay}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Istant Health Potion Trigger Hp: " Margin="3,5,3,1"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="3" Text="{Binding IstantHealth, Mode=TwoWay}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Mana Potion Trigger Mp: " Margin="3,5,3,1"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="3" Text="{Binding Mana, Mode=TwoWay}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Istant Mana Potion Trigger Mp: " Margin="3,5,3,1"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="3" Text="{Binding IstantMana, Mode=TwoWay}"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
